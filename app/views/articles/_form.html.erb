<%= form_with(model: @article, local: true) do |form| %>
  <div class="field">
    <p><%= form.label :title %></p>
    <p><%= form.text_field :title %></p>
  </div>

  <div class="field">
    <p><%= form.label :body %></p>
    <p><%= form.text_area :body %></p>
  </div>

  <div class="field">
    <%= form.select :category_id, [["カテゴリ−１", 1],["カテゴリー２", 2] ] %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>